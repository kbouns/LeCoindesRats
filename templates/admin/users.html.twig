{% extends 'base.html.twig' %}

{% block title %}Gérer Utilisateurs{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Gérer Utilisateurs</h1>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Nom d'utilisateur</th>
                <th>Rôles</th>
                <th>Date d'inscription</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>{{ user.inscriptionTime|date('Y-m-d H:i:s') }}</td>
                    <td>
                        <a href="{{ path('admin_edit_user', {'id': user.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                        <form method="post" action="{{ path('admin_delete_user', {'id': user.id}) }}" style="display:inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
