{# templates/admin/categories.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Categories Management{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Categories</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                 {% for category in categories %}
                    <tr>
                        <td>{{ category.nameCategory }}</td>
                        <td>
                            <a href="{{ path('admin_edit_category', {'id': category.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                            <form method="post" action="{{ path('admin_delete_category', {'id': category.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">No categories found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
