{% extends 'base.html.twig' %}

{% block title %}Deal Details{% endblock %}

{% block body %}
<div class="container">
    <h1>Deal Details</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ deal.title }}</h5>
            <p class="card-text">{{ deal.description }}</p>
            <p>Status: {{ deal.isActive ? 'Active' : 'Inactive' }} | {{ deal.isPublished ? 'Published' : 'Unpublished' }}</p>
            <a href="{{ path('moderator_deals') }}" class="btn btn-primary">Back to Deals</a>
        </div>
    </div>
</div>
{% endblock %}
