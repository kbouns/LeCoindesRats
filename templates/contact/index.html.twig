{% extends 'base.html.twig' %}
{% block body %}
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Formulaire de contact, contacter l'équipe marketing pour demander un compte de franchise ou de salle de"/>
    <title> {% block title %} Formulaire de Contact {% endblock %} </title>

</head>

<body>

    <div class="flex_main">

    <form method="post" class="position_change">
        <div class="font_contact">
        {{form_start(form)}}
            {{form_row(form.firstname, {label:'Prénom'} )}}
            {{form_row(form.name, {label:'Nom'})}}
            {{form_row(form.email)}}
            {{form_row(form.subject, {label:'Sujet'})}}
            {{form_row(form.message)}}

            {{form_row(form.submit)}}
        {{form_rest(form)}}
        </div>
        <a class="btn btn-light" href="{{ path('app_login') }}">Précédent</a>

    </form>

    </div>

 
</body>
</html>

{% endblock %}